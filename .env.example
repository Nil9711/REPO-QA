# LLM Mode: ollama (default), openai, or claude
MODE=ollama

# Ollama settings (used for embeddings always, LLM when MODE=ollama)
OLLAMA_BASE_URL=http://localhost:11434
EMBEDDING_MODEL=nomic-embed-text
LLM_MODEL=qwen2.5:14b-instruct
LLM_TIMEOUT=120

# OpenAI settings (used when MODE=openai)
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4o-mini
# OPENAI_BASE_URL=  # Optional, for compatible APIs

# Claude settings (used when MODE=claude)
CLAUDE_API_KEY=
CLAUDE_MODEL=claude-3-5-sonnet-20240620

# Discord bot (optional)
DISCORD_BOT_TOKEN=
INDEX_DIR=./indexes/bots-client-api
